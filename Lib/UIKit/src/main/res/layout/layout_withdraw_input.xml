<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_input_corner"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_input_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/global_input_hint_color"
        android:textColor="@color/global_input_text_color"
        android:textSize="15sp"
        android:textCursorDrawable="@null"
        android:background="@null"
        android:maxLines="1"
        android:singleLine="true"
        tools:hint="输入或粘贴地址"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="4dp"
        android:layout_toLeftOf="@+id/btn_right_text"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btn_right_text"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        tools:text="全部提币"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_right"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingEnd="10dp"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/ic_qr"
        android:visibility="gone"
        tools:text="全部提币"
        android:background="?android:selectableItemBackground"
        />

</RelativeLayout>
