<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <attr name="xui_switch_alpha_pressed" format="boolean" />
    <attr name="xui_switch_alpha_disabled" format="boolean" />
    <attr name="xui_alpha_pressed" format="float" />
    <attr name="xui_alpha_disabled" format="float" />

    <attr name="xui_config_content_spacing_horizontal" format="dimension" /> <!-- margin 和 padding 等使用的内容通用水平间距 -->
    <attr name="xui_config_content_spacing_vertical" format="dimension" /> <!-- margin 和 padding 等使用的内容通用垂直间距 -->
    <attr name="xui_config_simple_list_item_height" format="dimension" />
    <attr name="xui_config_simple_list_icon_size" format="dimension" />

    <attr name="xui_general_shadow_elevation" format="dimension" />
    <attr name="xui_general_shadow_alpha" format="float" />

    <!--应用默认的背景颜色-->
    <attr name="xui_config_color_background" format="color" />
    <!-- 小的分割块使用浅色的分割线-->
    <attr name="xui_config_color_separator_light" format="color" />
    <!-- 大的分割块使用深色的分割线[像ListView、GridView之类]-->
    <attr name="xui_config_color_separator_dark" format="color" />
    <!--出错文字的颜色-->
    <attr name="xui_config_color_error_text" format="color" />
    <!--输入文字的颜色-->
    <attr name="xui_config_color_input_text" format="color" />
    <!--提示文字的颜色-->
    <attr name="xui_config_color_hint_text" format="color" />
    <!--应用边框的颜色-->
    <attr name="xui_config_color_stroke" format="color" />
    <!--应用不可点击的颜色-->
    <attr name="xui_config_color_disable" format="color" />
    <!--应用点击后的颜色-->
    <attr name="xui_config_color_pressed" format="color" />


    <!--XUILayout-->
    <declare-styleable name="XUILayout">
        <attr name="android:maxWidth" />
        <attr name="android:maxHeight" />
        <attr name="android:minWidth" />
        <attr name="android:minHeight" />
        <!--底部分割线的高度，默认0-->
        <attr name="xui_bottomDividerHeight" format="dimension" />
        <!--底部分割线的颜色，默认R.attr.xui_config_color_separator_light-->
        <attr name="xui_bottomDividerColor" format="color|reference" />
        <!--底部分割线左侧的边距，默认0-->
        <attr name="xui_bottomDividerInsetLeft" format="dimension" />
        <!--底部分割线右侧的边距，默认0-->
        <attr name="xui_bottomDividerInsetRight" format="dimension" />
        <!--顶部分割线的高度，默认0-->
        <attr name="xui_topDividerHeight" format="dimension" />
        <!--顶部分割线的颜色，默认R.attr.xui_config_color_separator_light-->
        <attr name="xui_topDividerColor" format="color|reference" />
        <!--顶部分割线左侧的边距，默认0-->
        <attr name="xui_topDividerInsetLeft" format="dimension" />
        <!--顶部分割线右侧的边距，默认0-->
        <attr name="xui_topDividerInsetRight" format="dimension" />
        <!--左侧分割线的宽度，默认0-->
        <attr name="xui_leftDividerWidth" format="dimension" />
        <!--左侧分割线的颜色，默认R.attr.xui_config_color_separator_light-->
        <attr name="xui_leftDividerColor" format="color|reference" />
        <!--左侧分割线顶部的边距，默认0-->
        <attr name="xui_leftDividerInsetTop" format="dimension" />
        <!--左侧分割线底部的边距，默认0-->
        <attr name="xui_leftDividerInsetBottom" format="dimension" />
        <!--右侧分割线的宽度，默认0-->
        <attr name="xui_rightDividerWidth" format="dimension" />
        <!--右侧分割线的颜色，默认R.attr.xui_config_color_separator_light-->
        <attr name="xui_rightDividerColor" format="color|reference" />
        <!--右侧分割线顶部的边距，默认0-->
        <attr name="xui_rightDividerInsetTop" format="dimension" />
        <!--右侧分割线底部的边距，默认0-->
        <attr name="xui_rightDividerInsetBottom" format="dimension" />
        <!--圆角度数，默认0-->
        <attr name="xui_radius" format="dimension" />
        <!--边框颜色，默认0-->
        <attr name="xui_borderColor" format="color" />
        <!--边框宽度，默认1px-->
        <attr name="xui_borderWidth" format="dimension" />
        <!--21版本下，裁剪圆角边框的镂空颜色-->
        <attr name="xui_outerNormalColor" format="color|reference" />
        <!--隐藏圆角的类型，默认none-->
        <attr name="xui_hideRadiusSide" format="enum">
            <enum name="none" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
            <enum name="left" value="4" />
        </attr>
        <!--是否显示边框, 默认true-->
        <attr name="xui_showBorderOnlyBeforeL" format="boolean" />
        <!--阴影的大小，默认0-->
        <attr name="xui_shadowElevation" format="dimension" />
        <!--是否使用主题的阴影大小，默认是false,主题默认阴影大小是14dp-->
        <attr name="xui_useThemeGeneralShadowElevation" format="boolean" />
        <!--阴影的透明度，默认0.25-->
        <attr name="xui_shadowAlpha" format="float" />
        <!--轮廓的顶部边距，默认0-->
        <attr name="xui_outlineInsetTop" format="dimension" />
        <!--轮廓的左侧边距，默认0-->
        <attr name="xui_outlineInsetLeft" format="dimension" />
        <!--轮廓的右侧边距，默认0-->
        <attr name="xui_outlineInsetRight" format="dimension" />
        <!--轮廓的底部边距，默认0-->
        <attr name="xui_outlineInsetBottom" format="dimension" />
        <!--轮廓是否使用内边距，默认false-->
        <attr name="xui_outlineExcludePadding" format="boolean" />
    </declare-styleable>
</resources>