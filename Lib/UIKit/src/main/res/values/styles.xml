<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:typeface">monospace</item> //隐藏状态栏
        <!-- Customize your theme here. -->
        <!--Appbar背景色-->
        <item name="colorPrimary">@color/app_bg</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/global_main_text_color</item>
        <!--控制各个控件被选中时的颜色-->
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:windowBackground">@color/app_bg</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/theme_content</item>
        <!--<item name="colorControlActivated">@color/colorAccent</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/BaseTheme">

    </style>

    <style name="AppTheme.Splash" parent="@style/AppTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="colorPrimaryDark">@android:color/white</item>

        <!--
                <item name="android:windowTranslucentNavigation">true</item>
        -->
        <!--
                <item name="android:windowFullscreen">true</item>
        -->
    </style>

    <style name="text_flag_01">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/flag_01</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!--<style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>-->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:background">@color/app_bg</item>
    </style>

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="@style/ThemeOverlay.AppCompat.Light"/>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar_textsize">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/global_main_text_color</item>
    </style>

    <style name="toolbar_layout_coll_title_style" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/global_main_text_color</item>
    </style>

    <style name="toolbar_layout_ex_title_style" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/global_main_text_color</item>
    </style>

    <style name="dark_bg_text">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/dark_bg_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="border_btn_text_style">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/border_button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="toolbar_layout_title_style">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/theme_toolbar_title</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="toolbar_layout_title_white_style">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_bg_text_color</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="main_btn_style">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/btn_text_color_selector</item>
        <item name="android:background">@drawable/btn_bg_selector</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="secondary_button">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/global_button_text_color</item>
        <item name="android:background">@drawable/secondary_button_corner</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="main_text_tips_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/global_tip_text_color</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="bottomDialogStyle">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_dialog_out</item>
    </style>

    <style name="centerDialogStyle">
        <item name="android:windowEnterAnimation">@anim/anim_center_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/anim_center_dialog_out</item>
    </style>

    <style name="main_material_btn">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/global_button_text_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="tx_native_link_token">
        <item name="android:paddingTop">1.5dp</item>
        <item name="android:paddingBottom">1.5dp</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/label_native_text_color</item>
        <item name="android:background">@drawable/shape_native_token</item>
    </style>

    <style name="tx_cross_link_token">
        <item name="android:paddingTop">1.5dp</item>
        <item name="android:paddingBottom">1.5dp</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingEnd">3dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/global_label_text_color</item>
        <item name="android:background">@drawable/shape_dark20_blue</item>
    </style>

    <style name="tx_status_success">
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_green</item>
        <item name="android:background">@drawable/shape_20_green</item>
    </style>

    <style name="tx_status_fail">
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_red</item>
        <item name="android:background">@color/color_20_red</item>
    </style>

    <style name="bt_theme_blue" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/border_button_text_color</item>
        <item name="android:background">@drawable/btn_stroke_blue</item>
        <item name="android:layout_height">42dip</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ck_hidden_small">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/selector_theme_color</item>   // 这个设置有点奇怪
    </style>

    <!--分割线-->
    <style name="divider_line_style">
        <item name="android:background">@color/global_divider_color</item>
        <item name="android:height">1px</item>
    </style>

    <!--对话框标题-->
    <style name="dialog_title_style">
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dialog_title_color</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/loading_text_color</item>
        <item name="android:background">@color/loading_bg_color</item>
        <item name="android:headerDividersEnabled">true</item>
    </style>

    <!--提取收益和分红内容中的颜色-->
    <style name="reinvesrt_content_style">
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/global_secondary_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="expand_main_title_style">
        <item name="android:textColor">@color/global_main_text_color</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="main_title_style">
        <item name="android:textColor">@color/global_main_text_color</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="WindowAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


    <style name="basedialog_anim_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
    </style>

    <style name="dialog_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_dialog_out</item>
    </style>

</resources>
