<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <attr name="config_content_spacing_horizontal" format="dimension" /> <!-- margin 和 padding 等使用的内容通用水平间距 -->
    <attr name="config_content_spacing_vertical" format="dimension" />

    <attr name="config_color_separator_light" format="color" />

    <!--普通文字-->
    <!--标题文字大小-->
    <attr name="config_size_title_text" format="dimension" />
    <!--正文内容文字大小-->
    <attr name="config_size_content_text" format="dimension" />
    <!--辅助说明文字大小-->
    <attr name="config_size_explain_text" format="dimension" />

    <attr name="xui_config_content_spacing_horizontal" format="dimension" /> <!-- margin 和 padding 等使用的内容通用水平间距 -->
    <attr name="xui_config_content_spacing_vertical" format="dimension" /> <!-- margin 和 padding 等使用的内容通用垂直间距 -->
    <attr name="xui_config_simple_list_item_height" format="dimension" />
    <attr name="xui_config_simple_list_icon_size" format="dimension" />



    <declare-styleable name="InputView">
        <attr name="hint" format="reference|string" />
        <attr name="editable" format="reference|boolean" />
        <attr name="textType" format="reference|integer">
            <enum name="silent" value="0" />
            <enum name="normal" value="1" />
            <enum name="password" value="2" />
            <enum name="numberPassword" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BH_toolbar">
        <attr name="centerTitle" format="reference|string" />
    </declare-styleable>

    <declare-styleable name="Coin_Button">
        <attr name="actionImage" format="reference|integer" />
        <attr name="actionText" format="reference|string" />
        <attr name="actionMore" format="boolean" />
    </declare-styleable>


    <declare-styleable name="MnemonicTextViewExt">
        <attr name="bgColor" format="reference|color" />
    </declare-styleable>
    <declare-styleable name="GradientTabLayout">
        <attr name="tl_indicator_color" />
        <attr name="tl_indicator_height" />
        <attr name="tl_indicator_width" />
        <attr name="tl_indicator_margin_left" />
        <attr name="tl_indicator_margin_top" />
        <attr name="tl_indicator_margin_right" />
        <attr name="tl_indicator_margin_bottom" />
        <attr name="tl_indicator_corner_radius" />
        <attr name="tl_indicator_gravity" />
        <attr name="tl_indicator_style" />
        <attr name="tl_indicator_width_equal_title" />
        <attr name="tl_underline_color" />
        <attr name="tl_underline_height" />
        <attr name="tl_underline_gravity" />
        <attr name="tl_divider_color" />
        <attr name="tl_divider_width" />
        <attr name="tl_divider_padding" />
        <attr name="tl_tab_padding" />
        <attr name="tl_tab_space_equal" />
        <attr name="tl_tab_width" />
        <attr name="tl_textsize" />
        <attr name="tl_textSelectColor" />
        <attr name="tl_textUnselectColor" />
        <attr name="tl_textBold" />
        <attr name="tl_textAllCaps" />
        <attr name="indicator_start_color" format="color" />
        <attr name="indicator_end_color" format="color" />
    </declare-styleable>

    <declare-styleable name="With_Coin_Input">
        <attr name="rightColor" format="reference|color" />
        <attr name="rightText" format="reference|string" />
        <attr name="leftHint" format="reference|string" />
        <attr name="leftText" format="reference|string" />
        <attr name="isEditable" format="reference|boolean" />
    </declare-styleable>

    <declare-styleable name="Circle">
        <attr name="radius" format="reference|dimension" />
        <attr name="mcolor" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="ShadowContainer">
        <attr name="containerShadowColor" format="color"/>
        <attr name="containerShadowRadius" format="dimension"/>
        <attr name="containerDeltaLength" format="dimension"/>
        <attr name="containerCornerRadius" format="dimension"/>
        <attr name="deltaX" format="dimension"/>
        <attr name="deltaY" format="dimension"/>
        <attr name="enable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="HW_Loading_View">
        <!--控件大小-->
        <attr name="hlv_size" format="dimension"/>
        <!---控件颜色-->
        <attr name="hlv_color" format="color"/>
        <!--转一圈花费时长-->
        <attr name="hlv_duration" format="integer"/>
    </declare-styleable>

    <!--可设置最大高度的RecycleView-->
    <declare-styleable name="MaxHeightRecyclerView">
        <attr name="maxHeight" format="dimension"></attr>
    </declare-styleable>

    <declare-styleable name="PasswordInputView">
        <!--输入框的数量，默认是4-->
        <attr name="h_vcet_number" format="integer" />
        <!--每一个输入框的宽度，默认21dp-->
        <attr name="h_vcet_width" format="dimension|reference" />
        <attr name="h_vcet_height" format="dimension|reference" />
        <!--输入框之间的分割线-->
        <attr name="h_vcet_divider" format="dimension|reference" />
        <!--输入框文字颜色，默认黑色-->
        <attr name="h_vcet_text_color" format="color|reference" />
        <!--输入框文字大小，默认16sp-->
        <attr name="h_vcet_text_size" format="dimension|reference" />
        <!--输入框获取焦点时背景-->
        <attr name="h_vcet_bg_focus" format="color|reference" />
        <!--输入框没有焦点时背景-->
        <attr name="h_vcet_bg_normal" format="color|reference" />
        <!--是否是密码模式, 默认是false-->
        <attr name="h_vcet_is_pwd" format="boolean" />
        <!--密码模式时,圆的半径，默认是5dp-->
        <attr name="h_vcet_pwd_radius" format="dimension|reference" />
        <!--输入框获取焦点时背景-->
        <attr name="input_border_focus_color" format="color|reference" />
        <!--输入框没有焦点时背景-->
        <attr name="input_border_normal_color" format="color|reference" />
        <!--是否有边框-->
        <attr name="h_vcet_is_border" format="boolean" />
        <attr name="h_vcet_custom_keyborad" format="boolean" />
    </declare-styleable>

    <!-- MarqueeView -->
    <declare-styleable name="MarqueeView">
        <!--翻页的间隔-->
        <attr name="mq_interval" format="integer" />
        <!--动画的间隔-->
        <attr name="mq_animDuration" format="integer" />
        <!--动画的样式资源-->
        <attr name="mq_animIn" format="reference" />
        <attr name="mq_animOut" format="reference" />
    </declare-styleable>

    <declare-styleable name="AutoFitTextView">
        <!--自动字体大小适应功能是否开启，默认是true-->
        <attr name="aftv_enable" format="boolean" />
        <!--调整的最小的字体大小，默认是8sp-->
        <attr name="aftv_minTextSize" format="dimension" />
        <!--调整的精度，精度值越小，越精准，耗时越长，默认是0.5-->
        <attr name="aftv_precision" format="float" />
    </declare-styleable>

    <declare-styleable name="CookieBar">
        <!--CookieBar-->
        <attr name="cookieTitleColor" format="color" />
        <attr name="cookieMessageColor" format="color" />
        <attr name="cookieActionColor" format="color" />
        <attr name="cookieBackgroundColor" format="color" />
    </declare-styleable>

</resources>