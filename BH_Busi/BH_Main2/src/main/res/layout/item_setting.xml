<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/main_padding_left"
    android:paddingEnd="@dimen/main_padding_right"
    android:layout_height="@dimen/recycler_item_default_height"
    android:background="?android:selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textColor="@color/global_main_text_color"
        android:textSize="15sp"
        tools:text="@string/langeuage_setting"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_right_2_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:maxLines="2"
        android:gravity="right"
        android:textColor="@color/global_label_text_color"
        android:layout_toLeftOf="@+id/iv_arrow"
        tools:text="English"
        android:visibility="visible"
        android:layout_toRightOf="@+id/tv_title"
        android:layout_marginStart="8dp"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="15sp"
        app:autoSizeMinTextSize="13sp"
        app:autoSizeStepGranularity="1sp"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_gray_arrow"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_right_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/global_label_text_color"
        android:textSize="15sp"
        tools:text="v1.0.0"
        android:visibility="invisible"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/sc_theme"
        android:layout_width="42dip"
        android:layout_height="22dip"
        android:layout_centerVertical="true"
        android:checked="false"
        android:layout_alignParentRight="true"
        app:trackTint="@color/switch_compat_bg"
        android:visibility="invisible"
        />

    <androidx.appcompat.widget.AppCompatCheckedTextView
        android:id="@+id/ck_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_switch_small"
        android:checked="false"
        />

</RelativeLayout>