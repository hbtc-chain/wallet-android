<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_copy"
        android:layout_alignParentTop="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".ui.fragment.ExportTextFragment">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/page_margin_start"
                android:layout_marginTop="24dp"
                android:text="@string/backup_text_tip_1"
                android:textColor="@color/global_main_text_color"
                android:textSize="17sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/page_margin_start"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="@dimen/page_margin_start"
                android:text="@string/backup_text_tip_2"
                android:textColor="@color/secondary_tip_text_color"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/page_margin_start"
                android:layout_marginTop="12dp"
                android:text="@string/backup_text_tip_3"
                android:textColor="@color/global_main_text_color"
                android:textSize="17sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/page_margin_start"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="@dimen/page_margin_start"
                android:text="@string/backup_text_tip_4"
                android:textColor="@color/secondary_tip_text_color"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/page_margin_start"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="@dimen/page_margin_start"
                android:text="@string/backup_text_tip_5"
                android:textColor="@color/secondary_tip_text_color"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/page_margin_start"
                android:layout_marginTop="12dp"
                android:text="@string/backup_text_tip_7"
                android:textColor="@color/global_main_text_color"
                android:textSize="17sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/page_margin_start"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="@dimen/page_margin_start"
                android:text="@string/backup_text_tip_6"
                android:textColor="@color/secondary_tip_text_color"
                android:textSize="15sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:layout_margin="24dp"
                android:layout_marginStart="@dimen/main_padding_left"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:cardBackgroundColor="@color/global_input_background"
                app:cardCornerRadius="@dimen/main_radius_conner"
                app:cardElevation="0dp">


                <com.bhex.lib.uikit.widget.editor.EditTextWithScrollView
                    android:id="@+id/et_private_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="@string/hint_private_key_input"
                    android:inputType="textMultiLine"
                    android:overScrollMode="ifContentScrolls"
                    android:padding="16dp"
                    android:singleLine="false"
                    android:textColor="@color/global_main_text_color"
                    android:textColorHint="@color/global_input_hint_color"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp">

                </com.bhex.lib.uikit.widget.editor.EditTextWithScrollView>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_copy"
        style="@style/main_material_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/main_margin_bottom"
        android:layout_marginTop="@dimen/main_margin_bottom"
        android:layout_marginEnd="@dimen/main_margin_bottom"
        android:layout_marginBottom="@dimen/main_margin_bottom"
        android:enabled="true"
        android:text="@string/copy_privatekey"
        android:textAllCaps="false"
        android:textColor="@color/global_button_color"
        app:backgroundTint="@color/global_button_color_bg"
        app:cornerRadius="@dimen/main_radius_conner"
        app:layout_constraintBottom_toBottomOf="parent" />

</RelativeLayout>
