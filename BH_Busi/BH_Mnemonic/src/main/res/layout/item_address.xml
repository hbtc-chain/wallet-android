<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_wallet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/global_main_text_color"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        tools:text="主钱包"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/global_main_text_color"
        android:layout_toLeftOf="@+id/ck_ok"
        android:gravity="center"
        tools:text="BHTNBd37xZ6xA5LEYhwrbBpeeWPXVdZ7fhQ"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/tv_wallet_name"
        />

    <androidx.appcompat.widget.AppCompatCheckedTextView
        android:id="@+id/ck_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:paddingEnd="@dimen/main_padding_left"
        android:drawableRight="@drawable/checkbox_style"
        android:selectableItemBackground="@null"
        android:selectableItemBackgroundBorderless="@null"
        />

</RelativeLayout>
