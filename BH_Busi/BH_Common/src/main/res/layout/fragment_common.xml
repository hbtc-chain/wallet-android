<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_white_password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/delete_account"
        style="@style/dialog_title_style"
        android:paddingTop="@dimen/main_padding_top"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/main_padding_top"
        tools:text="@string/tip_delete_wallet"
        style="@style/dialog_title_style"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingBottom="@dimen/main_padding_bottom"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/global_divider_color"
        android:layout_marginTop="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/global_main_text_color"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/global_divider_color"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btn_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/sure"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@color/highlight_text_color" />


    </LinearLayout>
