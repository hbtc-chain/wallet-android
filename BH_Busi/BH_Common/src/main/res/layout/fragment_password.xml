    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_sub_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintBottom_toTopOf="@+id/inp_wallet_pwd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/global_tip_text_color"
        tools:text="生成跨链地址手续费0.007HBC"
        android:visibility="gone"
        />

    <com.bhex.lib.uikit.widget.keyborad.PasswordInputView
        android:id="@+id/inp_wallet_pwd"
        android:layout_width="0dp"
        android:layout_height="98dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:h_vcet_divider="8dp"
        app:h_vcet_height="56dp"
        app:h_vcet_width="40dp"
        app:h_vcet_number="6"
        app:h_vcet_is_border="true"
        />

